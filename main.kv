<MenuBar>:
    ActionBar:
        pos_hint: {'top':1}
        ActionView:
            use_separator: True
            ActionPrevious:
                app_icon: 'resources/midi-transform-icon.png'
                text: ''
                title: 'Midi Transform'
                with_previous: False
            ActionGroup:
                text: 'File'
                mode: 'spinner'
                size_hint_x: None
                width: 90
                ActionButton:
                    text: 'Load'
                    on_release: root.show_load()
                ActionButton:
                    text: 'Save'
                    on_release: root.show_save()
                ActionButton:
                    text: 'About'
                    on_release: root.about()
                ActionButton:
                    text: 'Quit'
                    on_release: root.quit()

<Root>:
    orientation: 'vertical'
    spacing: 40

    MenuBar:
        size_hint: (1., 0.1)

    BoxLayout:
        id: options_layout
        orientation: 'horizontal'
        BoxLayout:
            spacing: 1
            orientation: 'vertical'
            Label:
                markup: True
                text: "[color=3EBCEE][b]Transformation[/b][/color]"
            ToggleButton:
                id: transformation_none
                text: "None"
                group: "transformation"
                state: "down"
            ToggleButton:
                id: transformation_invert
                text: "Invert"
                group: "transformation"
            ToggleButton:
                id: transformation_revert
                text: "Revert"
                group: "transformation"
        BoxLayout:
            orientation: 'vertical'
            id: pitch_layout
            Label:
                markup: True
                text: "[color=3EBCEE][b]Pitch[/b][/color]"
            BoxLayout:
                Label:
                    text: "Change pitch"
                Switch:
                    id: pitch_switch
            BoxLayout:
                Label:
                    text: "Change value"
                Slider:
                    id: pitch_slider
                    min: -64
                    max: 64
                    on_touch_move: sliderval_label.text = str(int(pitch_slider.value))
            BoxLayout:
                Button:
                    id: reset_button
                    on_press: root.reset_pitch_slider()
                    text: "Reset"
                Label:
                    id: sliderval_label
                    text: "0"
    BoxLayout:
        orientation: 'vertical'
        Button:
            id: play_button
            on_press: root.play_music()
            text: "Play preview"
        Label:
            size_hint_y: 0.25
            id: status_label
            text: "Status: File not loaded."


<LoadDialog>:
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"
        FileChooserIconView:
            id: filechooser
            filters: ['*.mid']

        BoxLayout:
            size_hint_y: None
            height: 30
            Button:
                text: "Cancel"
                on_release: root.cancel()

            Button:
                text: "Load"
                on_release: root.load(filechooser.path, filechooser.selection)

<SaveDialog>:
    text_input: text_input
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"
        FileChooserIconView:
            id: filechooser
            on_selection: text_input.text = self.selection and self.selection[0] or ''

        TextInput:
            id: text_input
            size_hint_y: None
            height: 30
            multiline: False

        BoxLayout:
            size_hint_y: None
            height: 30
            Button:
                text: "Cancel"
                on_release: root.cancel()

            Button:
                text: "Save"
                on_release: root.save(filechooser.path, text_input.text)